{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build iOS App",
            "type": "shell",
            "command": "${workspaceFolder}/build_app.sh",
            "group": {
                "kind": "build",
                "isDefault": true
             }
        },
        {
            "label": "Run iOS App",
            "type": "shell",
            "command": "${workspaceFolder}/run_app.sh",
            "group": {
                "kind": "build",
                "isDefault": false
             }
        }
    ]
}
