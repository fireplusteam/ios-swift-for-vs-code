{
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "lldb",
            "request": "attach",
            "name": "Debug iOS App",
            "pid": "${config:iOS_PID}",
            "stopOnEntry": false
        },
        {
            "name": "Show iOS App Log",
            "type": "python",
            "request": "launch",
            "program": ".vscode/l.py",
            "stopOnEntry": false,
            "args": [
                ".logs/app.log",
            ],
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.vscode/.env",
            "cwd": "${workspaceFolder}"
        },
        { // this is for testing python files
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "args": ["-destinationDevice", "|platform=iOS Simulator,OS=17.0.1,name=iPhone 14 Pro| |platform=iOS Simulator,OS=17.0.1,name=iPhone 14 Pro| |platform=iOS Simulator,OS=17.0.1,name=iPhone 14 Pro Max|"],//["TestVSCode.xcworkspace", "TestVSCode", "fgf"],//["698B2C6D-4FA9-4142-B802-C9DF3C41E049","puzzle.TestVSCode"],
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.vscode/.env"
        },
    ]
}