{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "custom",
            "name": "iOS App Debug",
            "targetCreateCommands": [
                "command script import /Users/Ievgenii_Mykhalevskyi/Desktop/git@github.com:fireplusteam/ios_vs_code/example/.vscode/attach_lldb.py",
                "command script add -f attach_lldb.create_target create_target",
                "command script add -f attach_lldb.terminate_debugger terminate_debugger",
                "command script add -f attach_lldb.watch_new_process watch_new_process",
                "create_target"
            ],
            "processCreateCommands": [
                "process handle SIGKILL -n true -p true -s false",
                "watch_new_process"
            ],
            "exitCommands": [
                "process signal SIGTERM"
            ]
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach iOS App To Debug",
            "pid": "${config:iOS_PID}",
            "stopOnEntry": false
        },
        {
            "name": "Show iOS App Log",
            "type": "python",
            "request": "launch",
            "program": ".vscode/l.py",
            "stopOnEntry": false,
            "args": [
                ".logs/app.log",
            ],
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.vscode/.env",
            "cwd": "${workspaceFolder}"
        },
        { 
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "args": ["-destinationDevice", "|platform=iOS Simulator,OS=17.0.1,name=iPhone 14 Pro| |platform=iOS Simulator,OS=17.0.1,name=iPhone 14 Pro| |platform=iOS Simulator,OS=17.0.1,name=iPhone 14 Pro Max|"],
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.vscode/.env"
        },
        {
            "type": "lldb",
            "request": "custom",
            "name": "Custom launch",
            "targetCreateCommands": [
                "target create /Users/Ievgenii_Mykhalevskyi/Library/Developer/Xcode/DerivedData/TestVSCode-ctlyigbceiouzugswgcmpxekknht/Build/Products/Debug-iphonesimulator/TestVSCodeUITests-Runner.app"
            ],
            "processCreateCommands": [
                "process attach --name TestVSCodeUITests-Runner --waitfor",
                "continue"
            ],
        },
        {
            "type": "lldb",
            "request": "custom",
            "name": "Custom launch xcdebug",
            "targetCreateCommands": [
                "target create /Applications/Xcode.app/Contents/Developer/usr/bin/xcodebuild"
            ],
            "processCreateCommands": [
                "process launch -s -- test -workspace ${workspaceFolder}/TestVSCode.xcworkspace -scheme TestVSCode -configuration Debug -sdk iphonesimulator -destination \"id=698B2C6D-4FA9-4142-B802-C9DF3C41E049\"",
                "continue"
            ],
        },
    ]
}