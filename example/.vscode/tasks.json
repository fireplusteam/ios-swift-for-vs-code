{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    
    "options": {
        "env": {
            "PROJECT_FILE": "TestVSCode.xcworkspace",
            "PROJECT_SCHEME": "TestVSCode",
            "BUNDLE_NAME": "puzzle.TestVSCode",

            "PLATFORM": "iOS Simulator",
            "PLATFORM_OS": "17.0.1",
            "DEVICE_NAME": "iPhone 15 Pro"
        }
    },
    "tasks": [
        {
            "label": "Build iOS App",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/build_app.sh",
            "args": [
                "${PROJECT_FILE}",
                "${PROJECT_SCHEME}",
                "${BUNDLE_NAME}",
                "${PLATFORM}",
                "${PLATFORM_OS}",
                "${DEVICE_NAME}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
             },
             "options": {
                "cwd": "${workspaceFolder}",
             }
        },
        {
            "label": "Run iOS App",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/run_app.sh",
            "group": {
                "kind": "build",
                "isDefault": false
             },
             "args": [
                "${PROJECT_FILE}",
                "${PROJECT_SCHEME}",
                "${BUNDLE_NAME}",
                "${PLATFORM}",
                "${PLATFORM_OS}",
                "${DEVICE_NAME}"
            ],
             "options": {
                "cwd": "${workspaceFolder}"
             }
        },
        {
            "label": "Generate xCode Server",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/build_autocomplete.sh",
            "group": {
                "kind": "build",
                "isDefault": false
             },
             "args": [
                "${PROJECT_FILE}",
                "${PROJECT_SCHEME}"
            ],
             "options": {
                "cwd": "${workspaceFolder}"
             }
        },
        {
            "label": "Bind Autocomplete",
            "type": "shell",
            "command": ".vscode/restart_lsp_swift.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn":[
                "Generate xCode Server"
            ]
        }
    ]
}
