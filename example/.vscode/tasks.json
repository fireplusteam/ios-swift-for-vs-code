{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build iOS App",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/build_app.sh",
            "args": [
                "TestVSCode.xcworkspace", // path
                "TestVSCode", // Scheme,
                "puzzle.TestVSCode" // Bundle Name
            ],
            "group": {
                "kind": "build",
                "isDefault": true
             },
             "options": {
                "cwd": "${workspaceFolder}"
             }
        },
        {
            "label": "Run iOS App",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/run_app.sh",
            "group": {
                "kind": "build",
                "isDefault": false
             },
             "args": [
                "TestVSCode.xcworkspace", // project
                "TestVSCode", // Scheme,
                "puzzle.TestVSCode" // Bundle Name
            ],
             "options": {
                "cwd": "${workspaceFolder}"
             }
        }
    ]
}
