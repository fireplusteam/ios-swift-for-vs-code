{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "envFile": ".vscode/.env"
        }
    },
    "tasks": [
        {
            "label": "Build iOS App",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/build_app.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "Run iOS App",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/run_app.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Test iOS App",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/test_app.sh",
            "group": {
                "kind": "test",
                "isDefault": false,
                "isTestCommand": true
            },
            "presentation": {
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Generate xCode Server",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/build_autocomplete.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Bind Autocomplete",
            "type": "shell",
            "command": ".vscode/restart_lsp_swift.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Generate xCode Server"
            ]
        }
    ]
}