{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "custom",
            "name": "iOS App Debug",
            "targetCreateCommands": [
                "command script import .vscode/attach_lldb.py",
                "command script add -f attach_lldb.create_target create_target",
                "command script add -f attach_lldb.terminate_debugger terminate_debugger",
                "command script add -f attach_lldb.watch_new_process watch_new_process",
                "command script add -f attach_lldb.app_log app_log",

                "create_target"
            ],
            "processCreateCommands": [
                "process handle SIGKILL -n true -p true -s false",
                "process handle SIGTERM -n true -p true -s false",
                "watch_new_process"
            ],
            "exitCommands": []
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach iOS App To Debugger",
            "pid": "${command:pickMyProcess}",
            "stopOnEntry": false
        },
        {
            "name": "Show iOS App Log",
            "type": "python",
            "request": "launch",
            "program": ".vscode/app_log.py",
            "stopOnEntry": false,
            "args": [
                ".logs/app.log"
            ],
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.vscode/.env",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "args": [
                "TestVSCode.xcworkspace",
                "/Users/Ievgenii_Mykhalevskyi/Desktop/git@github.com:fireplusteam/ios_vs_code/example/TestVSCode/TestVSCodeTests/TestVSCodeTests.swift"
            ],
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.vscode/.env"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            }
        }
    ]
}