{
  "name": "vscode-ios",
  "displayName": "iOS IDE",
  "description": "Develop your iOS application in VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:Package.swift",
    "workspaceContains:*.xcworkspace",
    "workspaceContains:*.xcodeproj",
    "workspaceContains:buildServer.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "key": "shift+f5",
        "command": "vscode-ios.stop.debug.session",
        "when": "inDebugMode"
      }
    ],
    "taskDefinitions": [
      {
        "type": "vscode-ios-tasks",
        "required": [
          "taskBuild"
        ],
        "properties": {
          "taskBuild": {
            "type": "string",
            "description": "The build type"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "vscode-ios.project.selectTarget",
        "title": "iOS: Select Scheme"
      },
      {
        "command": "vscode-ios.env.scriptPath",
        "title": "iOS: Script Path"
      },
      {
        "command": "vscode-ios.project.selectDevice",
        "title": "iOS: Select DEBUG Device"
      },
      {
        "command": "vscode-ios.check.workspace",
        "title": "iOS: Validate Environment"
      },
      {
        "command": "vscode-ios.check.generateXcodeServer",
        "title": "iOS: Generate xCode Server"
      },
      {
        "command": "vscode-ios.build.clean",
        "title": "iOS: Clean Derived Data",
        "category": "build"
      },
      {
        "command": "vscode-ios.build.all",
        "title": "iOS: Build All",
        "category": "build"
      },
      {
        "command": "vscode-ios.build.currentFile",
        "title": "iOS: Build All",
        "category": "build"
      },
      {
        "command": "vscode-ios.build.selectedTarget",
        "title": "iOS: Build: Current File",
        "category": "build"
      },
      {
        "command": "vscode-ios.build.tests",
        "title": "iOS: Build Tests",
        "category": "build"
      },
      {
        "command": "vscode-ios.utils.file.nameOfModule",
        "title": "iOS: Name Of Module By Current File",
        "category": "build"
      },
      {
        "command": "vscode-ios.build.tests.currentFile",
        "title": "iOS: Build Tests: Current File",
        "category": "build"
      },
      {
        "command": "vscode-ios.run.app",
        "title": "iOS: Run App"
      },
      {
        "command": "vscode-ios.run.app.multiple.devices",
        "title": "iOS: Run App On Multiple Devices"
      },
      {
        "command": "vscode-ios.run.app.debug",
        "title": "iOS: Run & Debug App"
      },
      {
        "command": "vscode-ios.run.tests.debug",
        "title": "iOS: Tests & Debug"
      }
    ],
    "debuggers": [
      {
        "type": "xcode-lldb",
        "label": "iOS: APP Debug",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "target": [
                "app",
                "tests"
              ]
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "xcode-lldb",
            "name": "iOS: APP Debug",
            "request": "launch",
            "target": "app"
          }
        ],
        "configurationSnippets": [
          {
            "label": "iOS: APP Debug",
            "description": "Add a new configuration for iOS debugging",
            "body": {
              "type": "xcode-lldb",
              "name": "iOS: APP Debug",
              "request": "launch",
              "target": "app"
            }
          },
          {
            "label": "iOS: Tests Debug",
            "description": "Add a new configuration for iOS debugging",
            "body": {
              "type": "xcode-lldb",
              "name": "iOS: Tests Debug",
              "request": "launch",
              "target": "tests"
            }
          }
        ]
      }
    ],
    "extensionDependencies": [
      "vadimcn.vscode-lldb",
      "swift-lang"
    ],
    "extensionPack": [
      "vadimcn.vscode-lldb",
      "swift-lang"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  }
}
